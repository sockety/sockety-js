{
  "compilerOptions": {
    "target": "es2022",
    "types": [
      "node",
      "jest"
    ],
    "lib": [
      "es2022"
    ],
    "module": "commonjs",
    "baseUrl": "./",
    "noEmitOnError": true,
    "sourceMap": true,
    "strict": true,
    "declaration": true,
    "paths": {
      "@sockety/buffers": [
        "../buffers",
        "node_modules/@sockety/buffers"
      ],
      "@sockety/core": [
        "../core",
        "node_modules/@sockety/core"
      ],
      "@sockety/uuid": [
        "../uuid",
        "node_modules/@sockety/uuid"
      ],
      "*": [
        "*",
        "node_modules/*"
      ]
    }
  },
  "include": [
    "./src/**/*.ts",
    "./test/**/*.ts",
    "./*.ts"
  ],
  "exclude": [
    "./node_modules"
  ]
}
